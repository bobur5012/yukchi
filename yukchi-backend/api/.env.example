# ─── App ──────────────────────────────────────────────────────────────
NODE_ENV=production
PORT=3000

# ─── Database ─────────────────────────────────────────────────────────
DATABASE_URL=postgresql://user:password@localhost:5432/yukchi?schema=public

# ─── Redis ────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── JWT ──────────────────────────────────────────────────────────────
JWT_ACCESS_SECRET=change_me_access_secret_256bit
JWT_REFRESH_SECRET=change_me_refresh_secret_256bit
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# ─── CORS ─────────────────────────────────────────────────────────────
FRONTEND_URL=https://yukchi.netlify.app

# ─── Telegram Bot ─────────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_GROUP_CHAT_ID=-1001234567890

# ─── Telegram Client (GramJS) ─────────────────────────────────────────
TELEGRAM_APP_ID=12345678
TELEGRAM_APP_HASH=abcdef1234567890abcdef1234567890
SESSION_ENCRYPTION_KEY=change_me_32_bytes_hex_key_here_abcd

# ─── Security ─────────────────────────────────────────────────────────
THROTTLE_TTL=60000
THROTTLE_LIMIT=200
AUTH_THROTTLE_LIMIT=10
